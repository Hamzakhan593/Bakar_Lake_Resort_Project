@{
    ViewData["Title"] = "Packages";
}

<div class="container mt-5 text-light">
    <div class="row text-center">
        <div class="col-md-12">
            <h1 class="display-4 text-primary">Our Exclusive Packages</h1>
            <p class="lead">Choose the perfect package for your stay at Bakar Lake Resort and enjoy exceptional value!</p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card bg-dark text-light mb-4">
                <div class="card-header bg-primary text-center">1 Room Package</div>
                <div class="card-body">
                    <h5 class="card-title text-center">Rs. 3000 / Day</h5>
                    <p class="card-text text-center">Ideal for individuals or couples looking for a peaceful retreat.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-dark text-light mb-4">
                <div class="card-header bg-success text-center">2 Room Package</div>
                <div class="card-body">
                    <h5 class="card-title text-center">Rs. 4000 / Day</h5>
                    <p class="card-text text-center">Save Rs. 2000! Perfect for families or small groups.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-dark text-light mb-4">
                <div class="card-header bg-warning text-center">4 Room Package</div>
                <div class="card-body">
                    <h5 class="card-title text-center">Rs. 6000 / Day</h5>
                    <p class="card-text text-center">Save Rs. 6000! Best choice for larger families or groups.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4 text-center">
        <div class="col-md-12">
            <a href="@Url.Action("Create", "Booking")" class="btn btn-primary btn-lg">Book Now</a>
        </div>
    </div>
</div>
