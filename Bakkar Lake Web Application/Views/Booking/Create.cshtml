@model Bakkar_Lake_Web_Application.Models.BookingViewModel

<div class="container my-5 py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12">
            <div class="card shadow-lg border-0" style="border-radius: 15px;">
                <div class="card-header text-white text-center" style="background: linear-gradient(135deg, #007bff, #0056b3); border-top-left-radius: 15px; border-top-right-radius: 15px;">
                    <h3 class="mb-0">Create Booking</h3>
                </div>
                <div class="card-body" style="padding: 40px;">

                    <!-- Error Message Section -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="border-radius: 8px;"></div>

                    <form asp-action="Create" method="post" novalidate>
                        <!-- Customer Information -->
                        <div class="mb-4">
                            <h5 class="mb-3" style="font-weight: 600; color: #333;">Customer Information</h5>
                            <div class="mb-3">
                                <label for="CustomerName" class="form-label">Customer Name</label>
                                <input type="text" asp-for="CustomerName" class="form-control shadow-sm" placeholder="Enter full name" style="border-radius: 8px;" />
                                <span asp-validation-for="CustomerName" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="CustomerPhoneNumber" class="form-label">Phone Number</label>
                                <input type="text" asp-for="CustomerPhoneNumber" class="form-control shadow-sm" placeholder="03XXXXXXXXX" style="border-radius: 8px;" />
                                <span asp-validation-for="CustomerPhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="CustomerEmail" class="form-label">Email</label>
                                <input type="email" asp-for="CustomerEmail" class="form-control shadow-sm" placeholder="Enter your email" style="border-radius: 8px;" />
                                <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="Address" class="form-label">Address</label>
                                <input type="text" asp-for="Address" class="form-control shadow-sm" placeholder="Enter your address" style="border-radius: 8px;" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="CustomerCNIC" class="form-label">CNIC</label>
                                <input type="text" asp-for="CustomerCNIC" class="form-control shadow-sm" placeholder="XXXXX-XXXXXXX-X" style="border-radius: 8px;" />
                                <span asp-validation-for="CustomerCNIC" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Booking Information -->
                        <div class="mb-4">
                            <h5 class="mb-3" style="font-weight: 600; color: #333;">Booking Information</h5>
                            <div class="mb-3">
                                <label for="PackageId" class="form-label">Package</label>
                                <select asp-for="PackageId" class="form-control shadow-sm" asp-items="@(new SelectList(Model.Packages, "P_Id", "PakkageDetail"))" id="PackageId" style="border-radius: 8px;">
                                    <option value="">-- Select a Package --</option>
                                </select>
                                <span asp-validation-for="PackageId" class="text-danger"></span>
                            </div>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="CheckInDate" class="form-label">Check-In Date</label>
                                    <input type="date" asp-for="CheckInDate" class="form-control shadow-sm" style="border-radius: 8px;" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                    <span asp-validation-for="CheckInDate" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label for="CheckOutDate" class="form-label">Check-Out Date</label>
                                    <input type="date" asp-for="CheckOutDate" class="form-control shadow-sm" style="border-radius: 8px;" min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" />
                                    <span asp-validation-for="CheckOutDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg shadow" style="border-radius: 8px; background: linear-gradient(135deg, #007bff, #0056b3);">Submit Booking</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
