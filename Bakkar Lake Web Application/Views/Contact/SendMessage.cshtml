@model Bakkar_Lake_Web_Application.Models.ContactForm

@{
    ViewData["Title"] = "Contact Us";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12">
            <div class="text-center mb-5">
                <h2 class="fw-bold" style="color: #0056b3;">Get In Touch</h2>
                <p class="text-muted">We would love to hear from you! Please fill out the form below and we will get back to you as soon as possible.</p>
            </div>

            <!-- Success or Error Message -->
            @if (ViewBag.Message != null)
            {
                <div class="alert @(ViewBag.Message.ToString().Contains("successfully") ? "alert-success" : "alert-danger") text-center" role="alert" style="border-radius: 10px;">
                    @ViewBag.Message
                </div>
            }

            <div class="card shadow-lg border-0" style="border-radius: 15px;">
                <div class="card-body p-5">
                    <form asp-action="SendMessage" method="post">
                        <!-- Full Name -->
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold" style="color: #0056b3;">Full Name</label>
                            <input asp-for="Name" class="form-control shadow-sm" placeholder="Enter your full name" style="border-radius: 8px; border: 1px solid #007bff;" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Email Address -->
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-bold" style="color: #0056b3;">Email Address</label>
                            <input asp-for="Email" class="form-control shadow-sm" type="email" placeholder="Enter your email address" style="border-radius: 8px; border: 1px solid #007bff;" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Message -->
                        <div class="mb-4">
                            <label asp-for="Message" class="form-label fw-bold" style="color: #0056b3;">Message</label>
                            <textarea asp-for="Message" class="form-control shadow-sm" rows="5" placeholder="Type your message here" style="border-radius: 8px; border: 1px solid #007bff;"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg px-5" style="background: linear-gradient(135deg, #007bff, #0056b3); border: none; border-radius: 30px;">
                                Send Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
