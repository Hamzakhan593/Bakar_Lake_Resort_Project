@model AdminVM

@{
    ViewData["Title"] = "Add Room";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white text-center">
                    <h3>Add New Room</h3>
                </div>
                <div class="card-body">
                    <form asp-action="AddRoom" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="RoomName" class="form-label">Room Name</label>
                            <input asp-for="RoomName" type="text" class="form-control" id="RoomName" placeholder="Enter room name" required>
                            <span asp-validation-for="RoomName" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="RoomList" class="btn btn-secondary">Back to Room List</a>
                            <button type="submit" class="btn btn-success">Create Room</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
