@model IEnumerable<Package>

@{
    ViewData["Title"] = "Package List";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Package List</h2>
                <a asp-action="AddPackages" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Package
                </a>
            </div>

            @if (Model.Any())
            {
                <table class="table table-striped table-hover shadow">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Package Detail</th>
                            <th>Price Per Day (PKR)</th>
                            <th>Total Price (PKR)</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var package in Model)
                        {
                            <tr>
                                <td>@package.P_Id</td>
                                <td>@package.PakkageDetail</td>
                                <td>@package.PricePerDay</td>
                                <td>@package.PackageTotalPrice</td>
                                <td>
                                    @if (package.Status)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="EditPackage" asp-route-id="@package.P_Id" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="DeletePackage" asp-route-id="@package.P_Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this package?');">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info text-center">
                    No packages available. Click <strong>"Create New Package"</strong> to add one.
                </div>
            }
        </div>
    </div>
</div>
