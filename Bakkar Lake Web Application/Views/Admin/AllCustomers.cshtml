@model IEnumerable<Customer>
@{
    ViewData["Title"] = "All Customers";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">All Customers</h2>
        <a asp-action="CreateCustomer" class="btn btn-success">
            <i class="bi bi-person-plus"></i> Add New Customer
        </a>
    </div>

    <table class="table table-hover table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>CNIC</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.CustomerName</td>
                        <td>@customer.CustomerPhoneNumber</td>
                        <td>@customer.CustomerEmail</td>
                        <td>@customer.CustomerCNIC</td>
                        <td>@customer.Address</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="EditCustomer" asp-route-id="@customer.C_Id" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="DeleteCustomer" asp-route-id="@customer.C_Id" class="btn btn-sm btn-danger"
                                   onclick="return confirm('Are you sure you want to delete this customer?');">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-muted">No customers available at the moment.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
