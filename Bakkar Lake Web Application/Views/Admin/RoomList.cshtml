@model IEnumerable<Room>

@{
    ViewData["Title"] = "Room List";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Room List</h2>
                <a asp-action="AddRoom" class="btn btn-success">
                    <i class="bi bi-plus-square-fill"></i> Create New Room
                </a>
            </div>

            @if (Model.Any())
            {
                <table class="table table-bordered table-hover shadow">
                    <thead class="table-light">
                        <tr>
                            <th>Room Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var room in Model)
                        {
                            <tr>
                                <td>@room.RoomName</td>
                                <td>
                                    <a asp-action="DeleteRoom" asp-route-id="@room.RoomId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this room?');">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning text-center">
                    No rooms available. Click <strong>"Create New Room"</strong> to add one.
                </div>
            }
        </div>
    </div>
</div>
